<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="00000000000003" author="citeck">

        <createTable tableName="ecos_type">
            <column name="uuid" type="VARCHAR(36)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(1023)" />
            <column name="tenant" type="VARCHAR(255)" />
            <column name="parent_id" type="BIGINT">
                <constraints nullable="true" foreignKeyName="parent_id" references="ecos_type(id)"/>
            </column>
            <column name="section_id" type="BIGINT" />
        </createTable>

    </changeSet>

</databaseChangeLog>
